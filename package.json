{
  "name": "viztracer-vscode",
  "displayName": "VizTracer VS Code",
  "publisher": "gaogaotiantian",
  "description": "VSCode plugin for VizTracer",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/gaogaotiantian/viztracer-vscode"
  },
  "keywords": [
    "python",
    "profiling",
    "devtools"
  ],
  "license": "Apache-2.0",
  "icon": "assets/icon.png",
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "viztracer.view",
        "title": "View with VizTracer"
      },
      {
        "command": "viztracer.trace",
        "title": "Trace with VizTracer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceFilename =~ /\\.(json)$/i",
          "command": "viztracer.view",
          "group": "viztracer"
        },
        {
          "when": "resourceFilename =~ /\\.(py)$/i",
          "command": "viztracer.trace",
          "group": "viztracer"
        }
      ]
    },
    "configuration": {
      "title": "VizTracer",
      "properties": {
        "viztracer.viztracerArguments": {
          "type": "string",
          "default": "",
          "description": "Arguments to pass to VizTracer"
        },
        "viztracer.scriptArguments": {
          "type": "string",
          "default": "",
          "description": "Arguments to pass to the script"
        },
        "viztracer.openTabOn": {
          "type": "string",
          "default": "Always New",
          "enum": [
            "Always New",
            "Column One",
            "Column Two",
            "Next To Active",
            "Rightmost Existing"
          ],
          "description": "Which column will be used to open the viewer tab"
        }
      }
    }
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "@vscode/python-extension": "^1.0.5"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
